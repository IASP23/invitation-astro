---
import Layout from "../layouts/Layout.astro";
import Form from "../components/Form.astro";
import Timer from "../components/Timer.astro";
import CardHorario from "../components/CardHorario.astro";
import Temporizer from "../components/Temporizer.astro";
import Gallery from "../components/Gallery.astro";
---

<Layout title="Boda">
  <div class="bg-cover w-full min-h-[100vh]" style="background-image: url(./main_photo.webp);">
    <main class="p-5">
      <h1
        class="m-auto text-6xl uppercase">
        Nos casamos
      </h1>
  
      <h2 class="text-4xl font-bold">Alice & David</h2>
    </main>
  </div>


  <div class="py-5 flex flex-col items-center justify-center m-auto  gap-3 text-center">
    
    <div class="temporizer">
      <h2 class="text-4xl">Estás invitado</h2>
      <p class="text-2xl">Queremos que seas parte de este momento tal especial ! </p>
      <Temporizer />
    </div>
    
<!--     <div class="timer">
      <Timer />
    </div> -->


    <div class="cards">
      <div class="flex justify-center items-center">
        <img src="./anillo2.png" alt="vestido" width="32px" height="32px" >
      </div>

      <h2 class="text-4xl">Ceremónia</h2>
      <CardHorario oclock="17:00" place="Iglesia San Martin de Porres" street="Eduardo Morley y George Davis" href="https://goo.gl/maps/p242XZfmz7vhqQeh8"/>


      <h2 class="text-4xl">Celebración</h2>
      <CardHorario oclock="17:00" place="Iglesia San Martin de Porres" street="Eduardo Morley y George Davis" href="https://goo.gl/maps/p242XZfmz7vhqQeh8"/>

    </div>

    <div class="dressCode py-10"> 
      <div class="flex justify-center items-center">
        <img src="./vestido.png" alt="vestido" width="32px" height="32px" >
        <img src="./terno.png" alt="terno" width="32px" height="32px" >
      </div>

      <h2 class="text-4xl">Código de Vestimenta</h2>
      <p>Formal - No niños</p>

    </div>

    <div class="gallery">
      <Gallery />
    </div>


<!--     <div class="form">
      <Form />
    </div> -->

    <footer class="py-10 footer">
      <h1
      class="m-auto text-6xl">
      Te esperamos
    </h1>

    <h2 class="text-4xl ">Alice & David</h2>

    </footer>

  </div>
</Layout>

<script src="../scripts/animation.js"></script>
