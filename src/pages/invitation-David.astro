---
import Layout from "../layouts/Layout.astro";
import Form from "../components/Form.astro";
import Timer from "../components/Timer.astro";
import CardHorario from "../components/CardHorario.astro";
import Temporizer from "../components/Temporizer.astro";
import Gallery from "../components/Gallery.astro";
---

<Layout title="Boda">
  <div class="min-h-screen flex items-center justify-center">
    <img
      src="main_photo.webp"
      alt="Imagen adaptativa"
      class="max-w-full h-auto"
    />
  </div>

  <div
    class="bg-cover w-full min-h-[100vh]"
    style="background-image: url(./main_photo.webp);">
    <main class="p-5">
      <h1 class="m-auto text-6xl uppercase">Nos casamos</h1>

      <h2 class="text-4xl">Alice & David</h2>
    </main>
  </div>

  <div class="py-5 flex flex-col items-center justify-center gap-3 text-center">
    <div class="temporizer">
      <h2 class="text-4xl">Estás invitado</h2>
      <p>Queremos que seas parte de este momento tal especial !</p>
    </div>
    <Temporizer />
    <div class="timer">
      <Timer />
    </div>

    <div class="cards">
      <div class="flex justify-center items-center">
        <img src="./anillo2.png" alt="vestido" width="32px" height="32px" />
      </div>

      <h2 class="text-4xl">Ceremónia</h2>
      <CardHorario
        oclock="17:00"
        place="Iglesia San Martin de Porres"
        street="Eduardo Morley y George Davis"
        href="https://goo.gl/maps/p242XZfmz7vhqQeh8"
      />

      <h2 class="text-4xl">Celebración</h2>
      <CardHorario
        oclock="17:00"
        place="Iglesia San Martin de Porres"
        street="Eduardo Morley y George Davis"
        href="https://goo.gl/maps/p242XZfmz7vhqQeh8"
      />
    </div>

    <div class="dressCode py-10">
      <h2 class="text-4xl">Código de Vestimenta</h2>
      <p>Formal - No niños</p>
    </div>

    <div class="gallery">
      <h2 class="text-4xl">Nosotros</h2>
      <Gallery />
    </div>

    <div class="">
      <Form />
    </div>

    <footer class="py-10">
      <h1 class="m-auto text-6xl">Te esperamos</h1>

      <h2 class="text-4xl">Alice & David</h2>
    </footer>
  </div>
</Layout>
